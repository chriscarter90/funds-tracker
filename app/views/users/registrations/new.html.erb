<div class="row header-block">
  <div class="col-md-9">
    <h3>Sign up</h3>
  </div>
</div>

<div class="row">
  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', role: "form" },
    wrapper: :horizontal_form,
    wrapper_mappings: {
      check_boxes: :horizontal_radio_and_checkboxes,
      radio_buttons: :horizontal_radio_and_checkboxes,
      file: :horizontal_file_input,
      boolean: :horizontal_boolean
    } do |f| %>

    <%= f.input :first_name, placeholder: "First name", autofocus: true %>

    <%= f.input :last_name, placeholder: "Last name" %>

    <%= f.input :email, placeholder: "Email", required: true %>

    <%= f.input :password, placeholder: "Password", required: true %>

    <%= f.input :password_confirmation, placeholder: "Confirm password", required: true %>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit "Sign up", class: "btn btn-primary" %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
