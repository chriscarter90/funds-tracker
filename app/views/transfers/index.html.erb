<div class="row header-block">
  <div class="col-md-8 col-xs-12">
    <h3>Transfers</h3>
  </div>

  <div class="col-md-4 col-xs-12 header-actions">
    <%= link_to "New Transfer", new_transfer_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-9 col-xs-12">
    <% if @transfers.any? %>
      <%= render 'transfers_table' %>
    <% else %>
      <%= render 'no_transfers' %>
    <% end %>
  </div>
</div>

