<div class="row header-block">
  <div class="col-md-8">
    <h3>Tags</h3>
  </div>

  <div class="col-md-4 header-actions">
    <%= link_to "New Tag", new_tag_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @tags.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |t| %>
            <tr>
              <td>
                <%= t.name %>
              </td>
              <td>
                <%= link_to "Edit", edit_tag_path(t), class: "btn btn-warning" %>
                <%= link_to "Delete", tag_path(t), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this tag?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h5>
            You have no tags.
          </h5>
        </div>
        <div class="panel-body">
          Try making one <%= link_to "here", new_tag_path %>.
        </div>
      </div>
    <% end %>
  </div>
</div>
