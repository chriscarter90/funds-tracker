<div class="row header-block">
  <div class="col-md-9">
    <h3>Accounts</h3>
  </div>

  <div class="col-md-3 header-actions">
    <%= link_to "New Account", new_account_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @accounts.any? %>
      <table class="table">
        <tr>
          <th>
            Name
          </th>
          <th>
            Actions
          </th>
        <% @accounts.each do |a| %>
          <tr>
            <td>
              <%= link_to a.name, account_path(a) %>
            </td>
            <td>
              <%= link_to "Edit", edit_account_path(a), class: "btn btn-warning" %>
              <%= link_to "Delete", account_path(a), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this account?" } %>
            </td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5>
            You have no accounts.
          </h5>
        </div>
        <div class="panel-body">
          Try making one <%= link_to "here", new_account_path %>.
        </div>
      </div>
    <% end %>
  </div>
</div>
