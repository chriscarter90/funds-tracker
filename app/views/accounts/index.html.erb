<h3>Accounts</h3>

<%= link_to "New Account", new_account_path %>

<% if @accounts.any? %>
  <ul>
    <% @accounts.each do |a| %>
      <li>
        <%= a.name %>
        <%= link_to "Edit", edit_account_path(a) %>
        <%= link_to "Delete", account_path(a), method: :delete, data: { confirm: "Are you sure you want to delete this account?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>
    You have no accounts. Try making one <%= link_to "here", new_account_path %>.
  </p>
<% end %>
