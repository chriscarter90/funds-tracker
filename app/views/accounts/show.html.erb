<div class="row header-block">
  <div class="col-md-9">
    <h3><%= @account.name %></h3>
    <h4>Transactions</h4>
  </div>

  <div class="col-md-3 header-actions">
    <%= link_to "Add Transaction", new_account_transaction_path(@account), class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @transactions.any? %>
      <table class="table">
        <tr>
          <th>Description</th>
          <th>Amount</th>
          <th>Actions</th>
        </tr>
        <% @transactions.each do |t| %>
          <tr>
            <td>
              <%= t.description %>
            </td>
            <td>
              <%= transaction_amount(t) %>
            </td>
            <td>
              <%= link_to "Edit", edit_account_transaction_path(@account, t), class: "btn btn-warning" %>
              <%= link_to "Delete", account_transaction_path(@account, t), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this account?" } %>
            </td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h5>
            You have no transactions.
          </h5>
        </div>
        <div class="panel-body">
          Try adding one <%= link_to "here", new_account_transaction_path(@account) %>.
        </div>
      </div>
    <% end %>
  </div>
</div>
